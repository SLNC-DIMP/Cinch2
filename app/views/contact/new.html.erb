<h1>Contact Us</h1>

<div class="form">
    <%= form_for @message, :url => contact_path  do |f| %>

         <% if @message.errors.any? %>
             <div class="error_messages">
               <h2><%= pluralize(@message.errors.count, "error") %> :</h2>
               <ul>
                 <% @message.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                 <% end %>
               </ul>
             </div>
         <% end %>

        <%= f.label :name %>
        <br />
        <%= f.text_field(:name, placeholder: "Name") %>
        <br />
        <%= f.label :email %>
        <br />
        <%= f.text_field(:email, placeholder: "Email") %>
        <br />
        <%= f.label(:subject, "Subject: ") %>
        <br />
        <%= f.text_field(:subject, placeholder: "Subject") %>
        <br />
        <%= f.label(:body, "Question/Comment: ") %>
        <br />
        <%= f.text_area(:body, placeholder: "Your question/comment") %>
        <br />
        <%= f.show_simple_captcha object: "message",
                                  label: "Please enter the letters as they are shown in the image above." %>
        <br /><br />
        <%= f.button 'Send Message', class: 'btn btn-primary' %>

    <% end %>
</div>